{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=stt-tester-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply stt-tester-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply stt-tester-db",
    "db:seed": "wrangler d1 execute stt-tester-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute stt-tester-db --local",
    "db:console:prod": "wrangler d1 execute stt-tester-db"
  },
  "dependencies": {
    "@types/node": "^24.5.0",
    "hono": "^4.9.7",
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
